<div class="row">
    <div class="col-md-12">
        <hr />
        @{
            List<MedicineTable> lst = ViewData["MedicineTable"] as List<MedicineTable>;

            if (lst != null)
            {
                <table border="1">
                    <tr>
                        <th class="col-2">
                            Name
                        </th>
                        <th class="col-1">
                            Count
                        </th>
                        <th class="col-3">
                            Location
                        </th>
                        <th class="col-1">
                            Provider Type
                        </th>
                        <th class="col-3">
                            Store Name
                        </th>
                        <th class="col-2">
                            Batch ID
                        </th>
                    </tr>
                    @{ foreach (var item in lst)
                        {
                            <tr>
                                <td class="col-2">@item.name</td>                            
                                <td class="col-1">@item.count</td>                            
                                <td class="col-3">@item.location</td>                            
                                <td class="col-1">@item.providertype</td>
                                <td class="col-3">@item.StoreName</td>
                                <td class="col-2">@item.BatchID</td>
                            </tr>
                        }
                    }
                </table>
            }
        }
        <hr />
        <form method="post">

            <label for="Name">Medicine Name</label>
            <input type="text" id="Name" name="Name" placeholder="Drug Name" class="col-5"/>
            <input type="submit" />            
        </form>
        <div>            
            <input type='button' value='Add' id='addButton' onClick='redirectOnClick()' />
<script>
function redirectOnClick(){
    document.location ='/AddMedicine';
}
</script>

        </div>
    </div>
</div> 